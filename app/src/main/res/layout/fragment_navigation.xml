<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/black_2"
        app:layout_constraintBottom_toBottomOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_4b" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/home"
        android:layout_width="101dp"
        android:layout_height="42dp"
        android:layout_marginVertical="6dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/search"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toTopOf="@id/bar"
        app:layout_constraintBottom_toBottomOf="@id/bar"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="683dp">

        <ImageView
            android:id="@+id/home_image"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="2dp"
            android:contentDescription="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_bar_home" />

        <TextView
            android:id="@+id/home_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_btm"
            android:textAppearance="@style/BottomBar.Item" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/search"
        android:layout_width="102dp"
        android:layout_height="42dp"
        android:layout_marginVertical="6dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/favorites"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/home"
        app:layout_constraintTop_toTopOf="@id/bar"
        app:layout_constraintBottom_toBottomOf="@id/bar"
        tools:layout_editor_absoluteY="683dp">

        <ImageView
            android:id="@+id/search_image"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="2dp"
            android:contentDescription="@null"
            android:padding="3dp"
            android:scaleType="fitCenter"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:src="@drawable/ic_search" />

        <TextView
            android:id="@+id/search_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_btn"
            android:textAppearance="@style/BottomBar.Item" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/favorites"
        android:layout_width="101dp"
        android:layout_height="42dp"
        android:layout_marginVertical="6dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/settings"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/search"
        app:layout_constraintTop_toTopOf="@id/bar"
        app:layout_constraintBottom_toBottomOf="@id/bar"
        tools:layout_editor_absoluteY="683dp">

        <ImageView
            android:id="@+id/favorites_image"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="2dp"
            android:contentDescription="@null"
            android:scaleType="fitCenter"
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:src="@drawable/ic_bar_favorites" />

        <TextView
            android:id="@+id/favoritess_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/favorites_btn"
            android:textAppearance="@style/BottomBar.Item" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/settings"
        android:layout_width="102dp"
        android:layout_height="42dp"
        android:layout_marginVertical="6dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/favorites"
        app:layout_constraintTop_toTopOf="@id/bar"
        app:layout_constraintBottom_toBottomOf="@id/bar"
        tools:layout_editor_absoluteY="683dp">

        <ImageView
            android:id="@+id/settings_image"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="2dp"
            android:contentDescription="@null"
            android:scaleType="fitCenter"
            android:scaleX="1.1"
            android:scaleY="1.1"
            android:src="@drawable/ic_bar_settings" />

        <TextView
            android:id="@+id/settings_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_btn"
            android:textAppearance="@style/BottomBar.Item" />
    </LinearLayout>


    <FrameLayout
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toTopOf="@id/bar"
        app:layout_constraintTop_toTopOf="parent"
        app:navGraph="@navigation/navigation_nav_graph" />

</androidx.constraintlayout.widget.ConstraintLayout>